<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zuhlke.upskilling.departureboard.seku">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:usesCleartextTraffic="true"
        android:name=".DepartureBoardApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_train_black_24dp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_train_black_24dp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".trainsSearch.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".departures.DepartureActivity"/>
        <activity android:name=".departureDetails.DepartureItemDetailsActivity"/>
    </application>

</manifest>